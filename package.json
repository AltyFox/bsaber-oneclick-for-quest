{
  "name": "electron-adb-checker",
  "version": "1.0.0",
  "description": "An Electron app to check for ADB presence, download it if missing, and connect to the user's Quest.",
  "main": "src/main.ts",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder",
    "package": "electron-builder --dir"
  },
  "dependencies": {
    "electron": "^25.0.0",
    "axios": "^0.27.2",
    "fs-extra": "^10.0.0"
  },
  "devDependencies": {
    "typescript": "^4.5.4",
    "electron-builder": "^23.6.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/yourusername/electron-adb-checker.git"
  },
  "keywords": [
    "electron",
    "adb",
    "quest",
    "application"
  ],
  "author": "Your Name",
  "license": "MIT",
  "build": {
    "appId": "com.yourname.electronadbchecker",
    "productName": "Electron ADB Checker",
    "files": [
      "dist/**/*",
      "src/**/*"
    ],
    "directories": {
      "output": "dist"
    }
  }
}