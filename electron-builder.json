{
  "appId": "com.example.electron-adb-checker",
  "productName": "Electron ADB Checker",
  "version": "1.0.0",
  "files": [
    "dist/**/*",
    "src/**/*",
    "node_modules/**/*"
  ],
  "directories": {
    "output": "build"
  },
  "win": {
    "target": "nsis",
    "icon": "build/icon.ico"
  },
  "mac": {
    "target": "dmg",
    "icon": "build/icon.icns"
  },
  "linux": {
    "target": "AppImage",
    "icon": "build/icon.png"
  },
  "scripts": {
    "postinstall": "electron-builder install-app-deps"
  }
}